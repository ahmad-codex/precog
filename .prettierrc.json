{
    "overrides": [
        {
            "files": "*.sol",
            "options": {
                "printWidth": 120,
                "tabWidth": 4,
                "useTabs": false,
                "singleQuote": false,
                "bracketSpacing": false,
                "explicitTypes": "never"
            }
        },
        {
            "files": "*.ts",
            "options": {
                "tabWidth": 2,
                "printWidth": 110,
                "semi": true,
                "singleQuote": false,
                "trailingComma": "es5"
            }
        }
    ]
}